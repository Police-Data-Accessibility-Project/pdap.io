{
  "root": true,
  "extends": ["@pdap-design-system/eslint-config"],
  "plugins": ["prettier"],
  "settings": {
    "import/core-modules": ["vue-router/auto-routes"]
  },
  "rules": {
    "vue/multi-word-component-names": 0,

    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSameLine": true,
        "singleAttributePerLine": false,
        "singleQuote": true
      }
    ]
  }
}
